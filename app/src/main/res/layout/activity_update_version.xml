<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.nicog.test.UpdateVersionAct"
                android:background="#d48431">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:text="Existe una version mas reciente!"
        android:id="@+id/btnActualizarApp"
        android:background="#96000000"
        android:textColor="#b76f2e"
        android:elevation="15dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgViejito"
        android:src="@drawable/anciano"
        android:layout_below="@+id/btnActualizarApp"
        android:layout_alignParentStart="true"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"/>

</RelativeLayout>
