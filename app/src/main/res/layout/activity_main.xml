<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".PickAGame"

                android:background="@drawable/bg_gradient">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/tecno"
        android:background="#96000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:background="@drawable/gradiente_gris_oscuro"
        android:padding="12dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgTrebol"
        android:src="@drawable/trebol"
        android:layout_above="@+id/progressBar"
        android:layout_below="@+id/imageView"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/txt_check_new_versions_1"
            android:id="@+id/txtCheckNewVersions"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:textColor="#FFFF9800"
            android:background="#96000000"
            android:layout_margin="4dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/pieMainActivity"
            android:id="@+id/textView7"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:textColor="#FFFF9800"
            android:background="#96000000"
            android:layout_margin="4dp"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>
</RelativeLayout>
