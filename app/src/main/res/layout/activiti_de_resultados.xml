<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.nicog.test.ActivitiDeResultados"
    android:background="@drawable/bg_gradient"
              android:baselineAligned="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ganado: $70.00"
            android:id="@+id/txtGanado"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.5"
            android:gravity="center"
            android:background="#96000000"
            android:textColor="#FFFF9800"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Saldo: $550.00"
            android:id="@+id/txtSaldo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.5"
            android:gravity="center"
            android:background="#96000000"
            android:textColor="#FFFF9800"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Sorteados:"
                android:id="@+id/textView"
                android:layout_weight="0.5"
                android:background="#96000000"
                android:textColor="#FFFF9800"
                android:gravity="center"
                android:layout_marginRight="4dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Apostados:"
                android:id="@+id/textView5"
                android:layout_weight="0.5"
                android:background="#96000000"
                android:textColor="#FFFF9800"
                android:gravity="center"
                android:layout_marginLeft="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/wrapperResultados"
            android:background="@drawable/dinero"
            android:layout_weight="0.9"
            android:layout_height="0dp">

            <ScrollView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/scrollView"
                android:layout_weight="0.5"
                android:background="#96000000"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:id="@+id/listaNumerosGanadores">

                </LinearLayout>
            </ScrollView>

            <ScrollView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/scrollView2"
                android:layout_weight="0.5"
                android:background="#96000000"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:id="@+id/listaNumerosApostados"/>
            </ScrollView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="Detalle"
            android:id="@+id/button3"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#96000000"
            android:textColor="#FFFF9800"
            android:layout_weight="0.3"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="Re - Jugar"
            android:id="@+id/button2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#96000000"
            android:textColor="#FFFF9800"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="0.3"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="Volver Atras"
            android:id="@+id/btnVolverAtrasResultados"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#96000000"
            android:textColor="#FFFF9800"
            android:layout_marginLeft="4dp"
            android:layout_weight="0.3"/>
    </LinearLayout>
</LinearLayout>
