<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.nicog.test.WaitingForResultsAct"
                android:background="@drawable/bg_gradient">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgWaitingForResult"
        android:src="@drawable/relojarena"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar3"
        android:layout_marginBottom="50dp"
        android:indeterminate="false"
        android:background="@drawable/gradiente_gris_oscuro"
        android:padding="12dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Esperando Resultados..."
        android:id="@+id/textView3"
        android:layout_above="@+id/progressBar3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:padding="12dp"
        android:textColor="#FFFF9800"
        android:background="@drawable/gradiente_gris_oscuro"/>

</RelativeLayout>
