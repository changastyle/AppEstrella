<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.nicog.test.VentanitaEmotiva"
                android:background="@drawable/bg_gradient"
                android:id="@+id/rel"
                android:clickable="false">

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imgButton"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:onClick="clickTerminarAct"
        android:background="@drawable/gradiente_gris_oscuro"
        android:layout_above="@+id/txtInfo"
        android:layout_marginBottom="8dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnOK"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Ok"
        android:textSize="24dp"
        android:padding="12dp"
        android:onClick="clickTerminarAct"
        android:layout_marginBottom="15dp"
        android:background="@drawable/gradiente_gris_oscuro"
        android:textColor="#FFFF9800"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ganaste!!"
        android:id="@+id/txtInfo"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/btnOK"
        android:layout_centerHorizontal="true"
        android:background="@drawable/gradiente_gris_oscuro"
        android:padding="12dp"
        android:gravity="center"
        android:textSize="24dp"
        android:textColor="#FFFF9800"/>

</RelativeLayout>
