<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nicog.test.ErrorActivity"
    android:background="@android:color/holo_red_light">

    <TextView android:text="Error de conexion" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtError"
        android:textColor="#010101"
              android:textSize="24dp"
        android:padding="12dp"
              android:layout_alignParentTop="true"
              android:layout_centerHorizontal="true"
              android:gravity="center"
              android:elevation="15dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/error" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Reintentar conexion"
        android:id="@+id/btnReintentarConexion"
        android:background="@drawable/btn_redondo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:elevation="15dp"
        android:textColor="#000"
        android:layout_marginTop="12dp"
        android:layout_margin="12dp"/>

    <TextView
        android:text="Verifique su conexion."
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textColor="#010101"
        android:textSize="24dp"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        android:elevation="15dp"
        android:layout_below="@+id/txtError"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Contactarse con el desarrollador"
        android:id="@+id/btnContactoDesarrollador"
        android:layout_above="@+id/btnReintentarConexion"
        android:layout_alignParentStart="true"
        android:background="@drawable/btn_redondo"
        android:layout_marginBottom="12dp"
        android:textSize="20dp"
        android:elevation="15dp"
        android:textColor="#000"
        android:layout_margin="12dp"/>

</RelativeLayout>
