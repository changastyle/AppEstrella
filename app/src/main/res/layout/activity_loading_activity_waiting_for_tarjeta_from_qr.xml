<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nicog.test.LoadingActivityWaitingForTarjetaFromQR"
                android:background="@drawable/bg_gradient"
                android:id="@+id/relativelayoutacttarjeta"
                android:padding="12dp">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imagen"
        android:layout_centerHorizontal="true"
        android:src="@drawable/relojarena"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewNumeroLeidoLoadingActivity"
        android:layout_below="@+id/textView9"
        android:gravity="center"
        android:textColor="#FFFF9800"
        android:background="@drawable/gradiente_gris_oscuro"
        android:padding="12dp"
        android:layout_marginTop="8dp"/>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp"
        android:background="@drawable/gradiente_gris_oscuro"
        android:padding="12dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/actWaitingForTarjetaTxtDescriptivo"
        android:id="@+id/textView9"
        android:background="@drawable/gradiente_gris_oscuro"
        android:textColor="#FFFF9800"
        android:gravity="center"
        android:padding="12dp"
        android:layout_below="@+id/imagen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp"/>
</RelativeLayout>
